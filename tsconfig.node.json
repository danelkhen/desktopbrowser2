{
    "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
    "include": [
        "electron.vite.config.*",
        "src/main/**/*",
        "src/preload/**/*",
        "src/shared/*.ts",
        "src/renderer/src/lib/sortToUrl.ts"
    ],
    "compilerOptions": {
        "composite": true,
        "types": ["electron-vite/node"],
        "noImplicitAny": true,
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "noImplicitReturns": false
    }
}
